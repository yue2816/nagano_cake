<h1>商品編集</h1>

<%= form_with model: @item, url: "/admin/items/#{@item.id}" do |f| %>
  <p>商品画像</p>
  <%= f.file_field :image, accept: "image/*" %>
  <p>商品名</p>
  <%= f.text_field :name %>
  <p>商品説明</p>
  <%= f.text_area :introduction %>
  <p>税抜価格</p>
  <%= f.text_field :price %>

  <%= f.submit '変更を保存' %>
<% end %>