<div class="container mt-3">
  <div class="row">
    <h3 class="col">商品一覧</h3>

    <h4><%= link_to "＋", new_admin_item_path, class:"text-right btn btn-outline-secondary" %></h4>
  </div>
  <br>

  <table class="table">
  <thead>
    <tr class="table-secondary">
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜き価格</th>
    </tr>
  </thead>
  <% @items.each do |item| %>
  <tbody>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id), class:"border-bottom text-secondary" %></td>
      <td><%= item.price.to_s(:delimited) %></td>
    </tr>
  </tbody>
  <% end %>
</div>