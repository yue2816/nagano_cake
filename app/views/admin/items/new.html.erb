<div class="container mt-3">
  <h3 class="mb-5">商品新規登録</h3>

  <% if @item.errors.any? %>
    <%= @item.errors.count %>件のエラーが発生しました
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_with model: @item, url: '/admin/items' do |f| %>
    <div class="row form-group">
      <label class="col-lg-2">商品画像</label>
      <%= f.file_field :image, accept: "image/*" %>
    </div>

    <div class="row form-group">
      <label class="col-lg-2">商品名</label>
      <%= f.text_field :name, class:"form-control col-lg-5" %>
    </div>

    <div class="row form-group">
      <label class="col-lg-2">商品説明</label>
      <%= f.text_area :introduction, class:"form-control col-lg-5" %>
    </div>

    <div class="row form-group">
      <label class="col-lg-2">税抜価格</label>
      <%= f.text_field :price, class:"form-control col-lg-3" %>円
    </div>

    <%= f.submit '新規登録', class:"btn btn-success mt-4" %>
  <% end %>
</div>