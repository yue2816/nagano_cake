<div class="container mt-3">
  <h3 class="mb-4">商品詳細</h3>

  <div class="row">
    <div class="col-lg-4 mt-2">
      <%= image_tag @item.get_image(300,300) %>
    </div>

    <div class="col-lg-8 mt-2">
      <div class="row mt-4">
        <h6 class="col-lg-3">商品名</h6>
        <h5 class="col-lg"><%= @item.name %></h5>
      </div>

      <div class="row mt-2">
        <h6 class="col-lg-3">商品説明</h6>
        <h5 class="col-lg"><%= @item.introduction %></h5>
      </div>

      <div class="row mt-2">
        <h6 class="col-lg-3">税抜価格<br>(税込価格)</h6>
        <h5 class="col-lg"><%= @item.price.to_s(:delimited) %>(<%= @item.with_tax_price.to_s(:delimited) %>)円</h5>
      </div>
    </div>
  </div>
  <%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success mt-4" %>
</div>