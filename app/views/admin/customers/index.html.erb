<div class="container mt-3">
  <h3 class="col">会員一覧</h3>

  <table class="table">
    <thead>
      <tr class="table-secondary">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <% @customers.each do |customer| %>
    <tbody>
      <tr>
        <th scope="row"><%= customer.id %></th>
        <td>
        <%= link_to admin_customer_path(customer.id), class:"border-bottom text-secondary" do %>
          <%= customer.last_name %><%= customer.first_name %>
        <% end %>
        </td>
        <td><%= customer.email %></td>
        <td><%= customer.customer_status %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
</div>
