<h1>注文履歴一覧画面</h1>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      <td><%= order.shipping_name %></td>
      <td>
        <% array = [] %>
        <% order.order_items.each do |order_item| %>
          <% array << order_item.amount %>
        <% end %>
        <% @total_amount = array.sum %>
        <%= @total_amount %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>