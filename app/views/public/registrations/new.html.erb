<div class="container mt-3">
  <%= flash[:notice] %>

  <h3 class="mb-4">新規会員登録</h3>

  <%= form_with model: @customer, url: registration_path(resource_name) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    <form>
      <div class="form-group row">
        <div class="col-lg-3">
          <label>名前</label>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :last_name, class:"form-control", placeholder:"姓" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :first_name, class:"form-control", placeholder:"名" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-3">
          <label>フリガナ</label>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :last_name_kana, class:"form-control", placeholder:"セイ" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :first_name_kana, class:"form-control", placeholder:"メイ" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-3">
          <label>メールアドレス</label>
        </div>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-3">
          <label>郵便番号(ハイフンなし) </label>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :postal_code, class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-3">
          <label>住所</label>
        </div>
        <div class="col-lg-8">
          <%= f.text_field :address, class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-3">
          <label>電話番号(ハイフンなし) </label>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-3">
          <label>パスワード(6文字以上)</label>
        </div>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-lg-3">
          <label>パスワード(確認用)</label>
        </div>
        <div class="col-lg-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg">
          <%= f.submit "新規登録", class:"btn btn-success col-lg-3" %>
        </div>
      </div>
    </form>
  <% end %>

  <h5 class="mt-4">既に登録済みの方</h5>
  <h6>
    <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
  </h6>
</div>