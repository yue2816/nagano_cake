<div class="container mt-3">
  <h3 class="mb-4">商品詳細</h3>

  <div class="row">
    <div class="col-lg-4 mt-2">
      <%= image_tag @item.get_image(300,300) %>
    </div>

    <div class="col-lg-8 mt-2">
      <div class="row mt-4">
        <h6 class="col-lg-3">商品名</h6>
        <h5 class="col-lg"><%= @item.name %></h5>
      </div>

      <div class="row mt-2">
        <h6 class="col-lg-3">商品説明</h6>
        <h5 class="col-lg"><%= @item.introduction %></h5>
      </div>

      <div class="row mt-2">
        <h6 class="col-lg-3">税込価格</h6>
        <h5 class="col-lg"><%= @item.with_tax_price.to_s(:delimited) %>円</h5>
      </div>

      <%= form_with model: @cart_item, url: '/cart_items', method: :post do |f| %>
      <div class="row mt-4">
        <%= f.hidden_field :item_id, :value => @item.id %>
        <div class="col-lg-1">
          <%= f.select :amount, *[1..10] %>
        </div>
        <div class="col-lg">
          <%= f.submit "カートに入れる", class:"btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>