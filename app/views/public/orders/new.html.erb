<div class="container mt-3">
  <h3 class="mb-3">注文情報入力</h3>

  <h5><strong>支払方法</strong></h5>
  <%= form_with model: @order, url: "/orders/check", method: :post do |f| %>
    <div class="ml-3">
      <%= f.radio_button :payment, Order.payments.key(0), checked: "checked" %>
      <%= f.label :payment_credit_card, Order.payments_i18n[:credit_card] %>
    </div>

    <div class="ml-3">
      <%= f.radio_button :payment, Order.payments.key(1) %>
      <%= f.label :payment_transfer, Order.payments_i18n[:transfer] %>
    </div>

    <h5 class="mt-3"><strong>お届け先</strong></h5>
    <p class="ml-3">
      〒<%= current_customer.postal_code %><br>
      <%= current_customer.address %><br>
      <%= current_customer.last_name %><%= current_customer.first_name %>
    </p>

    <%= f.submit "確認画面へ進む", class:"btn btn-primary mt-4" %>
  <% end %>
</div>