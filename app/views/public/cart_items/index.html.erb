<h1>ショッピングカート</h1>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <td></td>
    </tr>
  <% end %>
    <tr>
      <td></td>
      <td></td>
      <td>合計金額</td>
      <td><%= @total %></td>
    </tr>
  </tbody>
</table>