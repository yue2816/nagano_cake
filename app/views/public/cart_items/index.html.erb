<h1>ショッピングカート</h1>

<%= link_to "カートを空にする", destroy_all_path, method: :delete, "data-confirm" => "本当に削除しますか？" %>

<table class="table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <%= form_with model: cart_item, url:"/cart_items/#{cart_item.id}", method: :patch do |f| %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更" %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    </tr>
  <% end %>
    <tr>
      <td></td>
      <td></td>
      <td>合計金額</td>
      <td><%= @total %></td>
    </tr>
  </tbody>
</table>

<%= link_to "買い物を続ける", root_path %>