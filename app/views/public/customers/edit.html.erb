<div class="container">
  <h1>会員情報編集</h1>

  <%= form_with model: @customer, url: customers_information_path do |f| %>
  <form>
    <div class="form-group row">
      <div class="col-lg-2">
        <label>氏名</label>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :last_name, class:"form-control" %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :first_name, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-lg-2">
        <label>フリガナ</label>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :last_name_kana, class:"form-control" %>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :first_name_kana, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-lg-2">
        <label>郵便番号</label>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :postal_code, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-lg-2">
        <label>住所</label>
      </div>
      <div class="col-lg-8">
        <%= f.text_field :address, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-lg-2">
        <label>電話番号</label>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :telephone_number, class:"form-control" %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-lg-2">
        <label>メールアドレス</label>
      </div>
      <div class="col-lg-3">
        <%= f.text_field :email, class:"form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2"></div>
      <%= f.submit '編集内容を保存', class:"btn btn-block btn-success col-4" %>
      <div class="col-lg-3"></div>
      <%= link_to "退会する", customers_check_path, class:"btn btn-block btn-danger col-2" %>
      <div class="col-lg-1"></div>
    </div>
  </form>
  <% end %>
</div>